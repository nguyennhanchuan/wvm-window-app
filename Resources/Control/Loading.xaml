<UserControl x:Class="VendingMachine.Resources.Control.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendingMachine.Resources.Control"
             mc:Ignorable="d" 
             xmlns:busyIndicator="https://github.com/Peoky/BusyIndicator"
             x:Name="UcProduct"
             d:DesignHeight="1040" d:DesignWidth="1080">
    
    <Border Background="#00FFFFFF"  
                Canvas.Left="0"
                Canvas.Top="0"
                Height="1040" Width="1080">
        <busyIndicator:BusyMask x:Name="BusyIndicator" IsBusy="{Binding IsLoading}" IndicatorType="Escalade" BusyContent="{Binding LoadingContent}">



        </busyIndicator:BusyMask>

    </Border>
</UserControl>
