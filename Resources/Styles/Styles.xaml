    </Style>

    <Style x:Key="MenuButton1Style"
           TargetType="Button">

        <Setter Property="Template">

            <Setter.Value>

                <ControlTemplate TargetType="Button">

                    <Grid>
                        <Border x:Name="border"
                                Background="#373E46"
                                Height="50"
                                VerticalAlignment="Top">
                            <ContentPresenter />
